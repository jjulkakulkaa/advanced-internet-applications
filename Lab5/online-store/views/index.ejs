<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Store</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Welcome to my Online Store</h1>
    <ul>
        <% products.forEach(product => { %>
            <li>
                <!-- Display product name and price -->
                <span><%= product.name %> - $<%= product.price %></span>
                <!-- Display available amount -->
                <span>Available: <%= product.amount %></span>
                <!-- Form to add items to cart with quantity input -->
                <form action="/cart" method="POST">
                    <!-- Hidden input for productId -->
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <!-- Input field for quantity with maximum set to available amount -->
                    <input type="number" name="quantity" value="1" min="1" max="<%= product.amount %>">
                    <!-- Submit button to add item to cart -->
                    <button type="submit">Add to Cart</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <!-- Button to navigate to the shopping cart -->
    <a href="/cart">
        <button>View Shopping Cart</button>
    </a>

    <!-- JavaScript function to log the productId -->
    <script>
        function logProductId(productId) {
            console.log('Product ID:', productId);
        }
    </script>
</body>
</html>
